<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MapFragment">

        <TextView
            android:id="@+id/mapParcelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Parcel ID: 100101010"/>
        
        <TextView
            android:id="@+id/mapPlacename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mapParcelId"
            android:layout_marginLeft="15dp"
            android:hint="Placename: Town of Belgium"/>

        <TextView
            android:id="@+id/mapAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapParcelId"
            android:hint="Address: 123 klajsdf Rd"/>

        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mapAddress"/>

    </RelativeLayout>

</layout>