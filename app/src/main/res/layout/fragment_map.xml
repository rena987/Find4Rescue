<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MapFragment">

        <TextView
            android:id="@+id/mapPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="PIN: 9880233515"/>

        <TextView
            android:id="@+id/mapSubdivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapPIN"
            tools:text="Subdivision: PARKSIDE"/>

        <TextView
            android:id="@+id/mapAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapSubdivision"
            tools:text="Address: 110 GLENMORE RD"/>

        <TextView
            android:id="@+id/mapDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapAddress"
            android:text="Distance: 2000 miles"/>

        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mapDistance"/>


    </RelativeLayout>

</layout>