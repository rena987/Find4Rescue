<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".fragments.SearchDetailFragment">

        <TextView
            android:id="@+id/dtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Address: 111 Emerson Gardens Rd." />

        <TextView
            android:id="@+id/dtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dtAddress"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Type: Collapse" />

        <TextView
            android:id="@+id/dtRescuer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dtType"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Reported by: serenabehera" />

        <TextView
            android:id="@+id/dtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dtRescuer"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:hint="Description: NOODLE FIRE NOODLE FIR ALERT ALERT ALERT!" />

        <ImageView
            android:id="@+id/dtImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/dtDescription"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:hint="Description: NOODLE FIRE NOODLE FIR ALERT ALERT ALERT!"
            tools:srcCompat="@tools:sample/avatars"/>

        <ImageButton
            android:id="@+id/btnPlotMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_unfilled_button"
            android:layout_below="@id/dtImage"
            android:layout_margin="50dp"/>

        <TextView
            android:id="@+id/tvMapLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnPlotMap"
            android:layout_alignBottom="@+id/btnPlotMap"
            android:gravity="center"
            android:layout_toRightOf="@id/btnPlotMap"
            android:text="Plot on map" />

        <ImageButton
            android:id="@+id/btnDealtRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_unfilled_button"
            android:layout_below="@id/btnPlotMap"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/tvDealtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnDealtRisk"
            android:layout_alignBottom="@+id/btnDealtRisk"
            android:gravity="center"
            android:layout_toRightOf="@id/btnPlotMap"
            android:text="Address the risk?" />

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_unfilled_button"
            android:layout_below="@id/btnDealtRisk"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/tvChatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnChat"
            android:layout_alignBottom="@+id/btnChat"
            android:gravity="center"
            android:layout_toRightOf="@id/btnPlotMap"
            android:text="Comment information and help" />


    </RelativeLayout>

</layout>
